<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExerciciosSpinnerEListViewActivity">

    <TextView
        android:id="@+id/exercicios_nome"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/exercicios_uf"
        android:text="UF:"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/exercicios_spinner"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/exercicios_cidades"
        android:text="Cidades:"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/exercicios_listView"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>